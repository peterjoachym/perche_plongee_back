{
  "name": "template-back-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "create-db-migration": "db-migrate create $NAME --sql-file",
    "migrate-db": "db-migrate up",
    "rollback-last-db-migration": "db-migrate down",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "npx eslint --fix *.js src tests *.js",
    "format": "prettier --write \"src/**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
    "test": "NODE_ENV=test jest --testRunner='jest-circus/runner' --maxWorkers=1",
    "test:migrate-db": "db-migrate up -e test",
    "precommit": "lint-staged && npm run test",
    "init:husky": "rm -rf ./.husky && npx husky install && npx husky add .husky/pre-commit 'npx lint-staged'"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.28.3",
    "axios": "^0.24.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "googleapis": "^94.0.0",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "eslint": "^8.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "jest-circus": "^27.4.2",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.2",
    "supertest": "^6.1.6"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  }
}
